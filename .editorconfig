root = true # 控制配置文件 .editorconfig 是否生效的字段

[**] # 匹配全部文件
indent_style = space # 缩进风格，可选space｜tab
indent_size = 2 # 缩进的空格数
charset = utf-8 # 字符集
trim_trailing_whitespace = true # 去除一行中的首尾空格
insert_final_newline = true # 文件以一个空白行结尾
end_of_line = lf # 换行符

[**.md] # 匹配 md 文件
trim_trailing_whitespace = false
